@page
@model GimManager.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

<link rel="stylesheet" href="~/css/login.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="login-container">
    <div class="left-panel">
        <img src="~/imagenes/imgLogin.jpg" alt="Imagen de recuperación" />
    </div>

    <div class="right-panel">
        <div class="logo">
            <img src="~/imagenes/imagenlogo.png" alt="Logo" />
        </div>

        <h2>Recuperar contraseña</h2>
        <p>Ingresa tu correo electrónico para enviarte un enlace de recuperación.</p>

        <form method="post" class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="input-group">
                <label asp-for="Input.Email"></label>
                <div class="input-with-icon">
                    <input asp-for="Input.Email" class="form-control" placeholder="Ingresa tu correo" />
                    <div class="icon-box">
                        <i class="fa fa-envelope"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="buttons">
                <button type="submit" class="btn btn-primary">Enviar enlace</button>
                <a asp-page="/Account/Login" class="btn btn-secondary">Volver al inicio</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
