@page
@model GimManager.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<link rel="stylesheet" href="~/css/login.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="login-container">
    <div class="left-panel">
        <img src="~/imagenes/imgLogin.jpg" alt="Imagen de registro" />
    </div>

    <div class="right-panel">
        <div class="logo">
            <img src="~/imagenes/imagenlogo.png" alt="Logo" />
        </div>

        <h2>Crear cuenta</h2>

        <form method="post" class="form-group" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Campo Nombre -->
            <div class="input-group">
                <label asp-for="Input.Nombre"></label>
                <div class="input-with-icon">
                    <input asp-for="Input.Nombre" class="form-control" placeholder="Ingresa tu nombre" />
                    <div class="icon-box">
                        <i class="fa fa-user"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>

            <!-- Campo Apellido -->
            <div class="input-group">
                <label asp-for="Input.Apellido"></label>
                <div class="input-with-icon">
                    <input asp-for="Input.Apellido" class="form-control" placeholder="Ingresa tu apellido" />
                    <div class="icon-box">
                        <i class="fa fa-user-tag"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>

            <!-- Campo Código Postal -->
            <div class="input-group">
                <label asp-for="Input.CodigoPostal"></label>
                <div class="input-with-icon">
                    <input asp-for="Input.CodigoPostal" class="form-control" placeholder="Código Postal" />
                    <div class="icon-box">
                        <i class="fa fa-map-pin"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.CodigoPostal" class="text-danger"></span>
            </div>

            <!-- Campo Email -->
            <div class="input-group">
                <label asp-for="Input.Email"></label>
                <div class="input-with-icon">
                    <input asp-for="Input.Email" class="form-control" placeholder="Ingresa tu correo" />
                    <div class="icon-box">
                        <i class="fa fa-envelope"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Campo Contraseña -->
            <div class="input-group">
                <label asp-for="Input.Password"></label>
                <div class="input-with-icon">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Ingresa tu contraseña" />
                    <div class="icon-box">
                        <i class="fa fa-lock"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Campo Confirmar Contraseña -->
            <div class="input-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <div class="input-with-icon">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirma tu contraseña" />
                    <div class="icon-box">
                        <i class="fa fa-check-circle"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="buttons">
                <button type="submit" class="btn btn-primary">Registrarse</button>
                <a asp-page="/Account/Login" class="btn btn-secondary">Iniciar sesión</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
