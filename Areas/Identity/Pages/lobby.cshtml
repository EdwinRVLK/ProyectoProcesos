@page
@model GimManager.Pages.Inicio.PrincipalModel
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@attribute [Authorize]

@{
    ViewData["Title"] = "Inicio";
    var nombreUsuario = User.Identity?.Name ?? "Usuario";
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- Barra superior -->
<div class="top-bar">
    <div class="logo">
        <img src="~/imagenes/imagenlogo.png" alt="Logo" />
    </div>
    <div class="icons">
        <i class="fa fa-user-circle" title="Perfil"></i>
        <i class="fa fa-home" title="Inicio"></i>
    </div>
</div>

<!-- Menú barra -->
<div class="menu-bar">
    <button>Inicio</button>
    <button>Mi progreso</button>
    <button>Rutinas</button>
    <button>Medidas</button>
    <button>Historial</button>
</div>

<!-- Título y campo de código -->
<div class="main-header">
    <h2>Resumen diario</h2>
    <input type="text" placeholder="Código de sesión" />
</div>

<!-- Contenedores -->
<div class="content-grid">
    <div class="content-box">Contenido 1</div>
    <div class="content-box">Contenido 2</div>
    <div class="content-box">Contenido 3</div>
    <div class="content-box">Contenido 4</div>
    <div class="content-box">Contenido 5</div>
    <div class="content-box">Contenido 6</div>
</div>
