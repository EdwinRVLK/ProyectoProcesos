@page
@model GimManager.Pages.Inicio.PrincipalModel
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@attribute [Authorize]

@{
    ViewData["Title"] = "Inicio";
    var nombreUsuario = User.Identity?.Name ?? "Usuario no autenticado"; // Asegúrate de que siempre haya un nombre
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Identity/lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Bienvenido, @nombreUsuario</h2> <!-- Se muestra el nombre del usuario -->
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario" style="text-decoration: none;">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Empleados/Empleados" style="text-decoration: none;">
            <button>Empleados</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="/VentasYpagos/PuntodeVenta">Punto de Venta</a>
            <a href="/VentasYpagos/MostrarPagos">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <a href="/Reportes/Reportes">
            <button onclick="toggleDropdown(this)">Reportes</button>
        </a>
    </div>
</div>

<div class="main-content">
    <div class="top-row">
        <h2>Resumen diario</h2>
        <div class="code-section">
            <label for="codigoCliente">Código del cliente:</label>
            <input type="text" id="codigoCliente" name="codigoCliente" placeholder="Ej: ABC123" />
        </div>
    </div>

        <div class="container-grid">
        <!-- Caja de Usuarios Registrados -->
        <div class="content-box">
            <h3>Usuarios Registrados</h3>
            <p>@Model.TotalUsuarios</p> <!-- Muestra el número total de usuarios registrados -->
        </div>

        <!-- Caja de Empleados Totales -->
        <div class="content-box">
            <h3>Empleados Totales</h3>
            <p>@Model.TotalEmpleados</p> <!-- Muestra el número total de empleados registrados -->
        </div>

        <!-- Caja de Ventas del Día -->
        <div class="content-box">
            <h3>Ventas del Día</h3>
            <p>$@Model.VentasDia.ToString("F2")</p> <!-- Muestra el total de ventas del día -->
        </div>

        <!-- Caja de Ventas del Mes -->
        <div class="content-box">
            <h3>Ventas del Mes</h3>
            <p>$@Model.VentasMes.ToString("F2")</p> <!-- Muestra el total de ventas del mes -->
        </div>
    </div>
</div>

<script src="~/js/lobby.js" defer></script>
