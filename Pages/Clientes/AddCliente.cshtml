@page
@model GimManager.Pages.Clientes.AgregarClienteModel
@{
    ViewData["Title"] = "Agregar Cliente";
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
    </div>
    <div class="header-title">
        <h2>Agregar Cliente</h2>
    </div>
    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>
    <div class="menu-item"><button onclick="toggleDropdown(this)">Inventario</button></div>
    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Empleados</button>
        <div class="dropdown-menu">
            <a href="#">Mostrar</a>
            <a href="#">Agregar</a>
            <a href="#">Eliminar</a>
        </div>
    </div>
    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="#">Punto de Venta</a>
            <a href="#">Mostrar pagos</a>
        </div>
    </div>
    <div class="menu-item"><button onclick="toggleDropdown(this)">Reportes</button></div>
</div>

<div class="main-content">
    <div class="form-card">
        <form method="post" enctype="multipart/form-data">
            <div class="form-flex">
                <div class="form-left">
                    <div class="form-group">
                        <label asp-for="Cliente.Id">ID:</label>
                        <input asp-for="Cliente.Id" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Cliente.Nombre">Nombre:</label>
                        <input asp-for="Cliente.Nombre" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Cliente.Apellidos">Apellidos:</label>
                        <input asp-for="Cliente.Apellidos" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Cliente.Telefono">Teléfono:</label>
                        <input asp-for="Cliente.Telefono" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Cliente.TipoMembresia">Tipo de membresía:</label>
                        <select asp-for="Cliente.TipoMembresia" class="form-control">
                            <option value="">Seleccionar...</option>
                            <option value="Mensual">Mensual</option>
                            <option value="Trimestral">Trimestral</option>
                            <option value="Anual">Anual</option>
                        </select>
                    </div>
                </div>

                <div class="form-right">
                    <label asp-for="Cliente.Foto">Foto del cliente:</label>
                    <input asp-for="Cliente.Foto" type="file" class="form-control" />

                    <div class="form-submit-right">
                    <button type="submit" class="btn-guardar">Guardar Cliente</button>
                    </div>
                    
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/AddCliente.js"></script>
}
