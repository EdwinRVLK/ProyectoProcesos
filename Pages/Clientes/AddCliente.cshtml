@page
@model GimManager.Pages.Clientes.AddClienteModel
@{
    ViewData["Title"] = "Agregar Cliente";
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Identity/lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Agregar Cliente</h2> <!-- Se muestra el nombre del usuario -->
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario" style="text-decoration: none;">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Empleados/Empleados" style="text-decoration: none;">
            <button>Empleados</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="/VentasYpagos/PuntodeVenta">Punto de Venta</a>
            <a href="/VentasYpagos/MostrarPagos">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <a href="/Reportes/Reportes">
            <button onclick="toggleDropdown(this)">Reportes</button>
        </a>
    </div>
</div>

<div class="main-content">
    <div class="form-card">
        <form method="post" enctype="multipart/form-data">
            <div class="form-flex">
                <div class="form-left">
                    <div class="form-group">
                        <label asp-for="Cliente.Nombre">Nombre:</label>
                        <input asp-for="Cliente.Nombre" class="form-control" />
                    </div>

                    <!-- Solo un apellido ahora -->
                    <div class="form-group">
                        <label asp-for="Cliente.Apellido">Apellido:</label>
                        <input asp-for="Cliente.Apellido" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Cliente.Telefono">Teléfono:</label>
                        <input asp-for="Cliente.Telefono" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Cliente.TipoMembresia">Tipo de membresía:</label>
                        <select asp-for="Cliente.TipoMembresia" class="form-control">
                            <option value="">Seleccionar...</option>
                            <option value="Normal">Normal</option>
                            <option value="Estudiante">Estudiante</option>
                            <option value="VIP">VIP</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Cliente.Meses">Número de meses:</label>
                        <select asp-for="Cliente.Meses" class="form-control">
                            <option value="0">Seleccionar...</option>
                            <option value="1">1 mes</option>
                            <option value="3">3 meses</option>
                            <option value="6">6 meses</option>
                            <option value="12">12 meses</option>
                        </select>
                    </div>
                </div>

                <div class="form-right">
                    <label asp-for="Cliente.Foto">Foto del cliente:</label>
                    <input asp-for="Cliente.Foto" type="file" class="form-control" />

                    <div class="form-group">
                        <label>Total a pagar:</label>
                        <div id="totalPago" style="font-size: 1.2rem; font-weight: bold; color: #2e7d32; padding: 8px; background-color: #f5f5f5; border-radius: 4px;">
                            $0.00
                        </div>
                    </div>

                    <div class="form-submit-right">
                        <a href="/Clientes/GestionCliente">
                            <button type="submit" class="btn-guardar">Guardar Cliente</button>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/AddCliente.js"></script>
}