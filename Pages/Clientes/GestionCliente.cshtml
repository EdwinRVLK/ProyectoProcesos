@page
@model GimManager.Pages.Clientes.GestionClienteModel
@{
    ViewData["Title"] = "Gestionar Clientes";
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Clientes</h2>
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario" style="text-decoration: none;">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Empleados/Empleados" style="text-decoration: none;">
            <button>Empleados</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="/VentasYpagos/PuntodeVenta">Punto de Venta</a>
            <a href="/VentasYpagos/MostrarPagos">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <a href="/Reportes/Reportes">
            <button onclick="toggleDropdown(this)">Reportes</button>
        </a>
    </div>
</div>

<div class="main-content">
    <form method="get" class="filter-bar" style="display: flex; gap: 1rem; align-items: center; margin-bottom: 1.5rem;">
        <div style="flex: 2; position: relative;">
            <i class="fas fa-search" style="position: absolute; top: 50%; left: 10px; transform: translateY(-50%); color: #888;"></i>
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Buscar"
                   class="form-control" style="padding-left: 35px; width: 100%;" />
        </div>

        <select name="MembresiaFilter" class="form-control" style="width: 160px;">
            <option value="">Filtrar</option>
            <option value="Normal" selected="@(Model.MembresiaFilter == "Normal")">Normal</option>
            <option value="Estudiante" selected="@(Model.MembresiaFilter == "Estudiante")">Estudiante</option>
            <option value="VIP" selected="@(Model.MembresiaFilter == "VIP")">VIP</option>
        </select>

        <button type="submit" class="btn-guardar" style="height: 40px;">Buscar</button>
    </form>

    <!-- Contenedor con scroll -->
            <table style="width: 100%; border-collapse: collapse; font-family: 'Inter';">
            <thead style="background-color: #eef2e0;">
                <tr>
                    <th style="padding: 8px; border: 1px solid #ccc;">ID</th>
                    <th style="padding: 8px; border: 1px solid #ccc;">Nombre</th>
                    <th style="padding: 8px; border: 1px solid #ccc;">Apellido</th>
                    <th style="padding: 8px; border: 1px solid #ccc;">Teléfono</th>
                    <th style="padding: 8px; border: 1px solid #ccc;">Membresía</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model.Clientes)
                {
                    <tr>
                        <td style="padding: 8px; border: 1px solid #ccc;">@cliente.Id</td>
                        <td style="padding: 8px; border: 1px solid #ccc;">@cliente.Nombre</td>
                        <td style="padding: 8px; border: 1px solid #ccc;">@cliente.Apellido</td>
                        <td style="padding: 8px; border: 1px solid #ccc;">@cliente.Telefono</td>
                        <td style="padding: 8px; border: 1px solid #ccc;">@cliente.TipoMembresia</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="margin-top: 1.5rem; display: flex; justify-content: flex-end; gap: 1rem;">
        <a href="/Clientes/AddCliente" class="btn-guardar" style="background-color: #1d8348;">
            <i class="fas fa-user-plus" style="margin-right: 5px;"></i> Agregar
        </a>
        <a href="/Clientes/EditarCliente" class="btn-guardar">
            <i class="fas fa-edit" style="margin-right: 5px;"></i> Editar
        </a>
        <a href="/Clientes/DeleteCliente" class="btn-guardar" style="background-color: crimson;">
            <i class="fas fa-user-minus" style="margin-right: 5px;"></i> Eliminar
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/AddCliente.js"></script>
}