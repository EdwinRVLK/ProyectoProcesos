@page
@model GimManager.Pages.Reportes.GenerarReporteModel

@{
    ViewData["Title"] = "Reporte de Ventas";
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Reporte de Ventas</h2>
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="main-content">
    <h3>Ventas de Productos</h3>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Fecha</th>
                <th>Total</th>
                <th>Productos Vendidos</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var venta in Model.Ventas)
        {
            <tr>
                <td>@venta.Fecha.ToString("yyyy-MM-dd")</td>
                <td>$@venta.Total</td>
                <td>
                    <ul>
                        @foreach (var detalle in venta.Detalles)
                        {
                            <li>
                                <strong>@detalle.NombreProducto</strong>
                                (Código: @detalle.CodigoProducto) — 
                                x@detalle.Cantidad × $@detalle.PrecioUnitario = 
                                <strong>$@detalle.Importe</strong>
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <h3>Ventas de Membresías</h3>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Tipo de Membresía</th>
                <th>Meses</th>
                <th>Concepto</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var vm in Model.VentasMembresia)
        {
            <tr>
                <td>@vm.Fecha.ToString("yyyy-MM-dd")</td>
                <td>@vm.Cliente?.Nombre @vm.Cliente?.Apellido</td>
                <td>@vm.TipoMembresia</td>
                <td>@vm.Meses</td>
                <td>@vm.Concepto</td>
                <td>$@vm.Total</td>
            </tr>
        }
        </tbody>
    </table>
</div>
