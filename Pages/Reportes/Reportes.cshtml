@page
@model GimManager.Pages.Reportes.ReportesModel
@{
    ViewData["Title"] = "Reportes";
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Identity/lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Reportes</h2>
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario" style="text-decoration: none;">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Empleados/Empleados" style="text-decoration: none;">
            <button>Empleados</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="/VentasYpagos/PuntodeVenta">Punto de Venta</a>
            <a href="/VentasYpagos/MostrarPagos">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <a href="/Reportes/Reportes">
            <button onclick="toggleDropdown(this)">Reportes</button>
        </a>
    </div>
</div>

<div class="main-content">
    <form method="get" class="filter-bar" style="display: flex; gap: 1rem; align-items: center; margin-bottom: 1.5rem;">
        <div style="flex: 2; position: relative;">
            <i class="fas fa-search" style="position: absolute; top: 50%; left: 10px; transform: translateY(-50%); color: #888;"></i>
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Buscar" class="form-control" style="padding-left: 35px; width: 100%;" />
        </div>

        <select name="TipoReporte" class="form-control" style="width: 180px;">
            <option value="Total de Ingresos" selected="@(Model.TipoReporte == "Total de Ingresos")">Total de Ingresos</option>
            <option value="Ventas" selected="@(Model.TipoReporte == "Ventas")">Ventas</option>
        </select>

        <input type="date" name="FechaDesde" value="@Model.FechaDesde.ToString("yyyy-MM-dd")" class="form-control" />
        <input type="date" name="FechaHasta" value="@Model.FechaHasta.ToString("yyyy-MM-dd")" class="form-control" />

        <button type="submit" class="btn-guardar" style="height: 40px;">Generar reporte</button>
    </form>

    <!-- Tabla de Reportes -->
    <div class="table-container">
        <table style="width: 100%; border-collapse: collapse; font-family: 'Inter';">
            <thead style="background-color: #eef2e0;">
                <tr>
                    <th>Fecha</th>
                    <th>Membr. Vendidas</th>
                    <th>Ingresos por Membresías</th>
                    <th>Productos Vendidos</th>
                    <th>Ingresos por Productos</th>
                    <th>Ingreso Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reporte in Model.Reportes)
                {
                    <tr>
                        <td>@reporte.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@reporte.MembresiasVendidas</td>
                        <td>@reporte.IngresosMembresias.ToString("C2")</td>
                        <td>@reporte.ProductosVendidos</td>
                        <td>@reporte.IngresosProductos.ToString("C2")</td>
                        <td>@reporte.IngresoTotal.ToString("C2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/Reportes.js"></script>
}