@page
@model GimManager.Pages.Reportes.ReportesModel
@{
    ViewData["Title"] = "Historial de Reportes";
}

<link rel="stylesheet" href="~/css/inventario.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="header-bar">
    <div class="logo">
        <a href="/Lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Inicio</h2>
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario" style="text-decoration: none;">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Empleados/Empleados" style="text-decoration: none;">
            <button>Empleados</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="/VentasYpagos/PuntodeVenta">Punto de Venta</a>
            <a href="/VentasYpagos/MostrarPagos">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <a href="/Reportes/Reportes">
            <button onclick="toggleDropdown(this)">Reportes</button>
        </a>
    </div>
</div>

<form method="post" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-md-3">
            <label for="FechaDesde" class="form-label">Desde:</label>
            <input type="date" id="FechaDesde" name="FechaDesde" class="form-control" value="@Model.FechaDesde.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-3">
            <label for="FechaHasta" class="form-label">Hasta:</label>
            <input type="date" id="FechaHasta" name="FechaHasta" class="form-control" value="@Model.FechaHasta.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Generar Reporte</button>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Fecha Generado</th>
            <th>Desde</th>
            <th>Hasta</th>
            <th>Total Productos</th>
            <th>Total Membresías</th>
            <th>Ingreso Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reporte in Model.Reportes)
        {
            <tr>
                <td>@reporte.Id</td>
                <td>@reporte.FechaGenerado.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@reporte.FechaDesde.ToString("yyyy-MM-dd")</td>
                <td>@reporte.FechaHasta.ToString("yyyy-MM-dd")</td>
                <td>@reporte.TotalProductos</td>
                <td>@reporte.TotalMembresias</td>
                <td>$@reporte.IngresoTotal</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-page="/Reportes/DetalleReporte" asp-route-id="@reporte.Id">Ver Detalle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
