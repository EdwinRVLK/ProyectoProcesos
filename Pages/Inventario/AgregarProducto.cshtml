@page
@model GimManager.Pages.Inventario.AgregarProductoModel
@{
    ViewData["Title"] = "Agregar Producto";
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Inicio</h2>
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario" style="text-decoration: none;">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Empleados</button>
        <div class="dropdown-menu">
            <a href="#">Mostrar</a>
            <a href="#">Agregar</a>
            <a href="#">Eliminar</a>
        </div>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="#">Punto de Venta</a>
            <a href="#">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Reportes</button>
    </div>
</div>

<div class="main-content">
    <div class="form-card" style="max-width: 900px; margin: auto;">
        <h2 style="text-align: center; margin-bottom: 2rem;">DATOS DEL PRODUCTO</h2>

        <form method="post">
            <div class="form-flex" style="display: flex; flex-wrap: wrap; gap: 2rem;">
                <div style="flex: 1 1 45%;">
                    <div class="form-group" style="margin-bottom: 1.2rem;">
                        <label style="font-weight: bold;">CÓDIGO O CLAVE</label>
                        <input type="text" class="form-control" placeholder="Clave del producto" asp-for="Producto.Codigo" />
                    </div>

                    <div class="form-group" style="margin-bottom: 1.2rem;">
                        <label style="font-weight: bold;">NOMBRE DEL PRODUCTO</label>
                        <input type="text" class="form-control" placeholder="Nombre" asp-for="Producto.NombreProducto" />
                    </div>

                    <div class="form-group" style="margin-bottom: 1.2rem;">
                        <label style="font-weight: bold;">CATEGORÍA</label>
                        <input type="text" class="form-control" placeholder="Categoría" asp-for="Producto.Categoria" />
                    </div>
                </div>

                <div style="flex: 1 1 45%;">
                    <div class="form-group" style="margin-bottom: 1.2rem;">
                        <label style="font-weight: bold;">CANTIDAD</label>
                        <input type="number" class="form-control" placeholder="Stock" asp-for="Producto.Cantidad" />
                    </div>

                    <div class="form-group" style="margin-bottom: 1.2rem;">
                        <label style="font-weight: bold;">PRECIO DE VENTA</label>
                        <input type="number" step="0.01" class="form-control" placeholder="$0.00" asp-for="Producto.Precio" />
                    </div>
                </div>
            </div>

            <div style="text-align: center; margin-top: 2rem;">
                <button type="submit" class="btn-guardar" style="background-color: #4CAF50; font-size: 1rem; padding: 0.8rem 2rem; border-radius: 2rem;">
                    Agregar Producto
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/AddCliente.js"></script>
}
