@page "/Inventario/EditarProducto"
@model GimManager.Pages.Inventario.EditarProductoModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container">
    <h2>Editar Producto</h2>
    
    <form method="post">
        <input type="hidden" asp-for="Producto.Id" />
        
        <div class="form-group">
            <label asp-for="Producto.NombreProducto"></label>
            <input asp-for="Producto.NombreProducto" class="form-control" />
            <span asp-validation-for="Producto.NombreProducto" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Producto.Categoria"></label>
            <select asp-for="Producto.Categoria" class="form-control">
                <option value="Accesorios">Accesorios</option>
                <option value="Suplementos">Suplementos</option>
                <option value="Bebidas">Bebidas</option>
                <option value="Alimentos">Alimentos</option>
            </select>
        </div>
        
        <div class="form-group">
            <label asp-for="Producto.Cantidad"></label>
            <input asp-for="Producto.Cantidad" class="form-control" />
            <span asp-validation-for="Producto.Cantidad" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Producto.Precio"></label>
            <input asp-for="Producto.Precio" class="form-control" />
            <span asp-validation-for="Producto.Precio" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="/Inventario/Inventario" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}