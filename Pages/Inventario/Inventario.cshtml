@page
@model GimManager.Pages.Inventario.InventarioModel
@{
    ViewData["Title"] = "Inventario";
}

<link rel="stylesheet" href="~/css/inventario.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Inventario</h2>
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Empleados/Empleados">
            <button>Empleados</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="/VentasYpagos/PuntodeVenta">Punto de Venta</a>
            <a href="/VentasYpagos/MostrarPagos">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <a href="/Reportes/Reportes">
            <button onclick="toggleDropdown(this)">Reportes</button>
        </a>
    </div>
</div>

<div class="main-content">
    <form method="get" class="filter-bar">
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Buscar" class="form-control search-input" />
        </div>

        <select name="CategoriaFilter" class="form-control category-filter">
            <option value="">Filtrar por Categoría</option>
            <option value="Accesorios" selected="@(Model.CategoriaFilter == "Accesorios")">Accesorios</option>
            <option value="Suplementos" selected="@(Model.CategoriaFilter == "Suplementos")">Suplementos</option>
            <option value="Bebidas" selected="@(Model.CategoriaFilter == "Bebidas")">Bebidas</option>
            <option value="Alimentos" selected="@(Model.CategoriaFilter == "Alimentos")">Alimentos</option>
        </select>

        <select name="OrderBy" class="form-control order-by">
            <option value="">Organizar por</option>
            <option value="Nombre" selected="@(Model.OrderBy == "Nombre")">Nombre</option>
            <option value="Precio" selected="@(Model.OrderBy == "Precio")">Precio</option>
            <option value="Fecha" selected="@(Model.OrderBy == "Fecha")">Última actualización</option>
        </select>

        <button type="submit" class="btn-guardar search-button">Buscar</button>
    </form>

    <div class="table-container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre del producto</th>
                    <th>Categoría</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Última actualización</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model.Productos)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.NombreProducto</td>
                        <td>@producto.Categoria</td>
                        <td>@producto.Cantidad</td>
                        <td>@producto.Precio.ToString("C2")</td>
                        <td>@producto.UltimaActualizacion.ToString("dd/MM/yyyy")</td>
                        <td class="action-buttons">
                            <a href="/Inventario/EditarProducto?id=@producto.Id"><i class="fas fa-edit edit-icon"></i></a>
                            <a href="/Inventario/EliminarProducto?id=@producto.Id"><i class="fas fa-trash-alt delete-icon"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="add-product-container">
        <a href="/Inventario/AgregarProducto" class="btn-guardar add-product-button">
            <i class="fas fa-plus-circle"></i> Agregar producto
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/inventario.js"></script>
}