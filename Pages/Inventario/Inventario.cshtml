@page
@model GimManager.Pages.Inventario.InventarioModel
@{
    ViewData["Title"] = "Inventario";
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Identity/lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2>Inventario</h2>
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario" style="text-decoration: none;">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Empleados</button>
        <div class="dropdown-menu">
            <a href="#">Mostrar</a>
            <a href="#">Agregar</a>
            <a href="#">Eliminar</a>
        </div>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="#">Punto de Venta</a>
            <a href="#">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Reportes</button>
    </div>
</div>


<div class="main-content">
    <form method="get" class="filter-bar" style="display: flex; gap: 1rem; align-items: center; margin-bottom: 1.5rem;">
        <div style="flex: 2; position: relative;">
            <i class="fas fa-search" style="position: absolute; top: 50%; left: 10px; transform: translateY(-50%); color: #888;"></i>
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Buscar"
                   class="form-control" style="padding-left: 35px; width: 100%;" />
        </div>

        <select class="form-control" style="width: 160px;">
            <option disabled selected>Filtrar por</option>
            <option>Nombre</option>
            <option>Categoría</option>
        </select>

        <select class="form-control" style="width: 160px;">
            <option disabled selected>Organizar por</option>
            <option>Nombre</option>
            <option>Precio</option>
        </select>

        <button type="submit" class="btn-guardar" style="height: 40px;">Buscar</button>
    </form>

    <table style="width: 100%; border-collapse: collapse; font-family: 'Inter';">
        <thead style="background-color: #eef2e0;">
            <tr>
                <th>ID</th>
                <th>Nombre del producto</th>
                <th>Categoría</th>
                <th>Cantidad de productos</th>
                <th>Precio</th>
                <th>Última actualización</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model.Productos)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.NombreProducto</td>
                    <td>@producto.Categoria</td>
                    <td>@producto.Cantidad</td>
                    <td>$@producto.Precio.ToString("F2")</td>
                    <td>@producto.UltimaActualizacion.ToString("dd/MM/yyyy")</td>
                    <td style="text-align: center;">
                        <a href="#"><i class="fas fa-edit" style="color: #256B45; margin-right: 10px;"></i></a>
                        <a href="#"><i class="fas fa-trash-alt" style="color: crimson;"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 1.5rem; display: flex; justify-content: flex-end;">
        <a href="/Inventario/AgregarProducto" class="btn-guardar" style="font-size: 1rem;">
            <i class="fas fa-plus-circle" style="margin-right: 5px;"></i> Agregar producto
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/AddCliente.js"></script>
}
