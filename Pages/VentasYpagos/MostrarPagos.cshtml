@page
@model GimManager.Pages.Clientes.MostrarClientesModel
@{
    ViewData["Title"] = "Mostrar Clientes";
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Identity/lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Mostrar Pagos</h2> <!-- Se muestra el nombre del usuario -->
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario" style="text-decoration: none;">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Empleados/Empleados" style="text-decoration: none;">
            <button>Empleados</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="/VentasYpagos/PuntodeVenta">Punto de Venta</a>
            <a href="/VentasYpagos/MostrarPagos">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <a href="/Reportes/Reportes">
            <button onclick="toggleDropdown(this)">Reportes</button>
        </a>
    </div>
</div>

<div class="main-content">
    <!-- Mensajes de estado -->
    <div id="pv-message" style="margin-bottom: 1rem; color: crimson; font-weight: bold;"></div>

    <!-- Filtro de búsqueda -->
    <form method="get" class="filter-bar" style="display: flex; gap: 1rem; align-items: center; margin-bottom: 1.5rem;">
        <div style="flex: 2; position: relative;">
            <i class="fas fa-search" style="position: absolute; top: 50%; left: 10px; transform: translateY(-50%); color: #888;"></i>
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Buscar por nombre..."
                   class="form-control" style="padding-left: 35px; width: 100%;" />
        </div>

        <select name="TipoMembresiaFilter" class="form-control" style="width: 180px;">
            <option disabled selected>Filtrar por tipo de membresía</option>
            <option value="Normal" selected="@(Model.TipoMembresiaFilter == "Normal")">Normal</option>
            <option value="Estudiante" selected="@(Model.TipoMembresiaFilter == "Estudiante")">Estudiante</option>
            <option value="VIP" selected="@(Model.TipoMembresiaFilter == "VIP")">VIP</option>
        </select>

        <select name="FechaVencimientoFilter" class="form-control" style="width: 180px;">
            <option disabled selected>Filtrar por vencimiento</option>
            <option value="today" selected="@(Model.FechaVencimientoFilter == "today")">Hoy</option>
            <option value="thisWeek" selected="@(Model.FechaVencimientoFilter == "thisWeek")">Esta semana</option>
            <option value="thisMonth" selected="@(Model.FechaVencimientoFilter == "thisMonth")">Este mes</option>
        </select>

        <button type="submit" class="btn-guardar" style="height: 40px;">Buscar</button>
    </form>

    <!-- Tabla de clientes -->
    <div class="table-container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Telefono</th>
                    <th>Tipo de Membresía</th>
                    <th>Vencimiento</th>
                    <th>Precio Membresía</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model.Clientes)
                {
                    <tr>
                        <td>@cliente.Id</td>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Apellido</td>
                        <td>@cliente.Telefono</td>
                        <td>@cliente.TipoMembresia</td>
                        <td>@cliente.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                        <td>$@cliente.PrecioMembresia.ToString("F2")</td>
                        <td class="action-buttons">
                            <!-- Icono de renovar -->
                            <a href="/Clientes/RenovarCliente/@cliente.Id"><i class="fas fa-sync-alt" style="color: #256B45;"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

@section Scripts {
    <script src="~/js/AddCliente.js"></script>
}
