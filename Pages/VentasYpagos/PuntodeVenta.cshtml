@page
@model GimManager.Pages.VentasYpagos.PuntoDeVentaModel
@{
    ViewData["Title"] = "Punto de Venta";
}

<link rel="stylesheet" href="~/css/PuntodeVenta.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Identity/lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Punto de Venta</h2>
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente"><button>Usuarios</button></a>
    </div>
    <div class="menu-item">
        <a href="/Inventario/Inventario"><button>Inventario</button></a>
    </div>
    <div class="menu-item">
        <a href="/Empleados/Empleados"><button>Empleados</button></a>
    </div>
    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="/VentasYpagos/PuntoDeVenta">Punto de Venta</a>
            <a href="/VentasYpagos/MostrarPagos">Mostrar pagos</a>
        </div>
    </div>
    <div class="menu-item">
        <a href="/Reportes/Reportes"><button>Reportes</button></a>
    </div>
</div>

<div class="main-content">
    <!-- Mensajes de estado -->
    <div id="pv-message" style="margin-bottom: 1rem; color: crimson; font-weight: bold;"></div>

    <!-- Buscador -->
    <div class="search-container">
        <input type="text" id="searchProduct" placeholder="Buscar producto por código" class="form-control search-input" />
        <button class="btn-guardar add-btn" onclick="addProductToSale()">Agregar</button>
    </div>

    <!-- Opciones adicionales -->
    <div class="horizontal-bar">
        <button class="bar-btn" onclick="abrirModalBuscar()">Buscar</button>
        <button class="bar-btn" onclick="abrirModalSalida()">Salidas</button>
        <button class="bar-btn" onclick="abrirModalEntrada()">Entradas</button>
        <button class="bar-btn" onclick="vaciarCarrito()">Vaciar carrito</button>
    </div>

    <!-- Tabla -->
    <div class="product-container">
        <div class="product-header">
            <div class="header-item">Código</div>
            <div class="header-item">Descripción</div>
            <div class="header-item">Precio</div>
            <div class="header-item">Cantidad</div>
            <div class="header-item">Importe</div>
        </div>
        <div id="saleProducts"></div>
    </div>

    <div class="bottom-bar">
        <div class="action-buttons">
            <button class="btn-action" onclick="finalizarVenta()">Cobrar</button>
        </div>
        <div class="total-price">
            $<span id="totalPrice">0.00</span>
        </div>
    </div>

    <!-- Modal de Salidas -->
    <div id="modalSalida" class="modal-inv" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Registrar Salida</h3>
                <span class="close" onclick="cerrarModalSalida()">&times;</span>
            </div>
            <input type="number" id="salidaMonto" placeholder="Monto" min="0.01" step="0.01" />
            <input type="text" id="salidaDescripcion" placeholder="Descripción" />
            <button onclick="registrarSalida()">Guardar</button>
        </div>
    </div>

    <!-- Modal de Entradas -->
    <div id="modalEntrada" class="modal-inv" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Registrar Entrada</h3>
                <span class="close" onclick="cerrarModalEntrada()">&times;</span>
            </div>
            <input type="number" id="entradaMonto" placeholder="Monto" min="0.01" step="0.01" />
            <input type="text" id="entradaDescripcion" placeholder="Descripción" />
            <button onclick="registrarEntrada()">Guardar</button>
        </div>
    </div>

    <div id="modalBuscar" class="modal-inv" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Buscar Producto</h3>
            <span class="close" onclick="cerrarModalBuscar()">&times;</span>
        </div>
        <input type="text" id="buscarInput" placeholder="Buscar por nombre..." oninput="filtrarProductos()" />
        <div id="resultadoBusqueda" class="tabla-busqueda">
            <em>Cargando inventario...</em>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/PuntoDeVenta.js"></script>
}
