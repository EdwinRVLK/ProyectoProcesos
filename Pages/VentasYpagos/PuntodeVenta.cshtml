@page
@model GimManager.Pages.PuntoDeVenta.PuntoDeVentaModel
@{
    ViewData["Title"] = "Punto de Venta";
}

<link rel="stylesheet" href="~/css/PuntodeVenta.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title">Punto de Venta</h2>
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario" style="text-decoration: none;">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Empleados/Empleados" style="text-decoration: none;">
            <button>Empleados</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="/VentasYpagos/PuntodeVenta">Punto de Venta</a>
            <a href="/VentasYpagos/MostrarPagos">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Reportes</button>
    </div>
</div>

<div class="main-content">
    <!-- Barra de Búsqueda y Agregar -->
    <div class="search-container">
        <input type="text" placeholder="Buscar producto" class="form-control search-input" />
        <button class="btn-guardar add-btn">Agregar</button>
    </div>

    <!-- Barra horizontal de opciones -->
    <div class="horizontal-bar">
        <button class="bar-btn">Art. común</button>
        <button class="bar-btn">Buscar</button>
        <button class="bar-btn">Entradas</button>
        <button class="bar-btn">Salidas</button>
        <button class="bar-btn">Borrar Art.</button>
    </div>

    <!-- Tabla de Productos -->
    <div class="product-container">
        <!-- Barra con los nombres de las columnas -->
        <div class="product-header">
            <div class="header-item">Código</div>
            <div class="header-item">Descripción</div>
            <div class="header-item">Precio venta</div>
            <div class="header-item">Cantidad</div>
            <div class="header-item">Importe</div>
            <div class="header-item">Existencia</div>
        </div>

        <!-- Mostrar productos -->
        @foreach (var producto in Model.Productos)
        {
            <div class="product-row">
                <div class="product-item">@producto.Codigo</div>
                <div class="product-item">@producto.Descripcion</div>
                <div class="product-item">@producto.PrecioVenta.ToString("C2")</div>
                <div class="product-item">
                    <input type="number" value="@producto.Cantidad" min="1" max="@producto.Existencia" class="product-quantity" />
                </div>
                <div class="product-item">@producto.Importe.ToString("C2")</div>
                <div class="product-item">@producto.Existencia</div>
            </div>
        }
    </div>

    <!-- Barra inferior con los botones de acción -->
    <div class="bottom-bar">
        <!-- Botón de cobrar -->
        <div class="action-buttons">
            <button class="btn-action">Cobrar</button>
            <button class="btn-action">Ventas y devoluciones</button>
            <button class="btn-action">Reimprimir ticket</button>
        </div>

        <!-- Total a la derecha -->
        <div class="total-price">
            $0.00
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/PuntoDeVenta.js"></script>
}
