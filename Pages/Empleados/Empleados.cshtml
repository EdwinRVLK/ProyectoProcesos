@page
@model GimManager.Pages.Empleados.EmpleadosModel
@{
    ViewData["Title"] = "Empleados";
}

<link rel="stylesheet" href="~/css/lobby.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Raleway:wght@500;700&display=swap" rel="stylesheet">

<div class="header-bar">
    <div class="logo">
        <a href="/Identity/lobby">
            <img src="~/imagenes/LogoRecortado.png" alt="Logo" />
        </a>
    </div>

    <div class="header-title">
        <h2 id="page-title"inventario>Empleados</h2> <!-- Se muestra el nombre del usuario -->
    </div>

    <div class="icon-buttons">
        <a href="/Identity/lobby"><i class="fas fa-home"></i></a>
        <i class="fas fa-user-circle"></i>
    </div>
</div>

<div class="menu-bar">
    <div class="menu-item">
        <a href="/Clientes/GestionCliente" style="text-decoration: none;">
            <button>Usuarios</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Inventario/Inventario" style="text-decoration: none;">
            <button>Inventario</button>
        </a>
    </div>

    <div class="menu-item">
        <a href="/Empleados/Empleados" style="text-decoration: none;">
            <button>Empleados</button>
        </a>
    </div>

    <div class="menu-item">
        <button onclick="toggleDropdown(this)">Ventas y membresías</button>
        <div class="dropdown-menu">
            <a href="/VentasYpagos/PuntodeVenta">Punto de Venta</a>
            <a href="/VentasYpagos/MostrarPagos">Mostrar pagos</a>
        </div>
    </div>

    <div class="menu-item">
        <a href="/Reportes/Reportes">
            <button onclick="toggleDropdown(this)">Reportes</button>
        </a>
    </div>
</div>

<div class="main-content">
    <form method="get" class="filter-bar" style="display: flex; gap: 1rem; align-items: center; margin-bottom: 1.5rem;">
        <div style="flex: 2; position: relative;">
            <i class="fas fa-search" style="position: absolute; top: 50%; left: 10px; transform: translateY(-50%); color: #888;"></i>
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Buscar empleado"
                   class="form-control" style="padding-left: 35px; width: 100%;" />
        </div>

        <select name="SueldoFiltro" class="form-control" style="width: 180px;">
            <option disabled selected>Filtrar por sueldo</option>
            <option>Menor a $2,000</option>
            <option>Mayor a $2,000</option>
        </select>

        <button type="submit" class="btn-guardar" style="height: 40px;">Buscar</button>
    </form>

    <!-- Contenedor con scroll -->
    <div class="scroll-container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Sueldo</th>
                    <th>Rol</th>
                    <th class="action-buttons">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model.Empleados)
                {
                    <tr>
                        <td>@emp.Id</td>
                        <td>@emp.Nombre</td>
                        <td>@emp.ApellidoPaterno</td>
                        <td>@emp.ApellidoMaterno</td>
                        <td>$@emp.Sueldo.ToString("N2")</td>
                        <td>@emp.Rol</td>
                        <td class="action-buttons">
                            <a href="/Empleados/EditarEmpleado?id=@emp.Id"><i class="fas fa-edit" style="color: #256B45;"></i></a>
                            <!-- Cambia esta línea -->
                            <a href="?handler=EliminarEmpleado&id=@emp.Id" 
                            onclick="return confirm('¿Eliminar a @emp.Nombre @emp.ApellidoPaterno?')">
                            <i class="fas fa-trash-alt" style="color: crimson;"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="margin-top: 1.5rem; display: flex; justify-content: flex-end; gap: 1rem;">
        <a href="/Empleados/AgregarEmpleado" class="btn-guardar" style="font-size: 1rem;">
            <i href="/Empleados/AgregarEmpleado" class="fas fa-user-plus" style="margin-right: 5px;"></i> Agregar empleado
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/Empleado.js"></script>
}
